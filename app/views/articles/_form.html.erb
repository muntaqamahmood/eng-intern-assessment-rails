<%= form_with model: article, local: true, html: { class: 'article-form' } do |form| %>
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: 'form-control' %>
      <%= render_error_messages(article, :title) %>
    </div>
  
    <div class="form-group">
      <%= form.label :content %>
      <%= form.text_area :content, class: 'form-control', rows: 5 %>
      <%= render_error_messages(article, :content) %>
    </div>
  
    <div class="form-group">
      <%= form.label :author %>
      <%= form.text_field :author, class: 'form-control' %>
    </div>
  
    <div class="form-group">
      <%= form.label :date %>
      <%= form.date_select :date, class: 'form-control' %>
    </div>
  
    <div class="form-group">
      <%= form.submit 'Submit', class: 'btn btn-primary' %>
    </div>
  <% end %>
  